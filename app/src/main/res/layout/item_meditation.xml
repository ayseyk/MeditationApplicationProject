<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/meditationImg"
        android:layout_width="159dp"
        android:layout_height="219dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMeditationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/meditationImg"
        app:layout_constraintStart_toStartOf="@+id/meditationImg"
        app:layout_constraintTop_toBottomOf="@+id/meditationImg" />

    <TextView
        android:id="@+id/tvMeditationDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvMeditationName"
        app:layout_constraintStart_toStartOf="@+id/tvMeditationName"
        app:layout_constraintTop_toBottomOf="@+id/tvMeditationName" />
</androidx.constraintlayout.widget.ConstraintLayout>